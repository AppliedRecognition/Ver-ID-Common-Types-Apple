{
    "$id": "http://appliedrecognition.com/schemas/Image",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "data": {
            "type": "string",
            "pattern": "^[A-Za-z0-9+/]+[=]{0,2}$"
        },
        "width": {
            "type": "integer"
        },
        "height": {
            "type": "integer"
        },
        "bytesPerRow": {
            "type": "integer"
        },
        "format": {
            "type": "string",
            "enum": ["rgb", "bgr", "argb", "bgra", "abgr", "rgba", "grayscale"]
        }
    },
    "required": []
}
